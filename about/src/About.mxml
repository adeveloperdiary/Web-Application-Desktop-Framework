	<mx:Script>
		<![CDATA[
			import mx.containers.Panel;
			import mx.managers.PopUpManager;
			
			private var panel:Panel;
			
			private function openDemo():void
			{
				var u:URLRequest = new URLRequest("http://abhisekjana.elementfx.com/mainapp/demo.html");
				navigateToURL(u,"_self");
			}	
			
			private function createPopUp(pnl:Panel):void {
				panel=pnl;
				panel.addEventListener(MouseEvent.CLICK,closePopUp,true);
				PopUpManager.addPopUp(panel,this,true);
				PopUpManager.centerPopUp(panel);
			}
			
			private function closePopUp(evt:MouseEvent):void {
                PopUpManager.removePopUp(panel);
            }



			
		]]>
