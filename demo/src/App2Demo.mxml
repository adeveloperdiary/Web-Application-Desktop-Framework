		bkImageDesktop2="assets/img29.jpg" bkImageDesktop3="assets/img29.jpg" bkImageDesktop4="assets/img29.jpg">
	</local:WebDesktopApplicationFramework>
	  
	<mx:Script>
		<![CDATA[
			import mx.messaging.SubscriptionInfo;
			import mx.charts.chartClasses.ChartBase;
			import com.ChartData;
			import mx.collections.ArrayCollection;

			
			[Bindable] public var desktopIcons:ArrayCollection=new ArrayCollection();
			
			public function init():void {
				
				var a:MainWindowComponent=new MainWindowComponent();
				var c:ChartData=new ChartData("","");
				var d:ChartComponent=new ChartComponent();
				var b:TaskManager=new TaskManager();
				var e:MyAlbum=new MyAlbum();
				var f:SuesVideo=new SuesVideo();

					
			}
			
			public function loadApplication():void {
				waf.showApplication();	
			}
			
		]]>
	</mx:Script>
