<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" xmlns:local="*" preinitialize="init()" creationComplete="loadApplication()">
	<mx:Style source="assets/style.css" />
	
	<mx:XML format="e4x" id="startMenuData">
		<root>    
			<menuitem label="Application" id="A">
				<SubMenuItem  label="Grid Gemo" id="E" appName="MainWindowComponent" single="Y" name="GridDemo"/> 
            	<SubMenuItem  label="Task Manager" id="E" appName="TaskManager" single="N"/>
